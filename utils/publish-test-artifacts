#!/bin/bash

# Make sure the current working dir is the same as this script.
cd "$(dirname "$0")" || exit 1; CURDIR="$(pwd)"

CONTAINER_ID="$(docker-compose ps -q web)"
DOCKER_DIR='$(docker exec "$CONTAINER_ID" pwd)'
echo "PWD"
echo $(docker exec "$CONTAINER_ID" pwd)
echo "LS"
echo $(docker exec "$CONTAINER_ID" ls)
echo "LS"
echo $(docker exec "$CONTAINER_ID" ls tmp-junit)

docker cp $CONTAINER_ID:$DOCKER_DIR/tmp-junit tmp-junit/
docker cp $CONTAINER_ID:tmp-junit tmp-junit/
