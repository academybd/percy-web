{{#unless isDefaultExpanded}}
  <div class="Alert Alert--warning">
    <strong>Whew!</strong> There are too many snapshots to show all at once, so they
    are collapsed below. <strong>Tip:</strong> use the arrow keys <code>←</code> and <code>➞</code> to move around.
  </div>
{{/unless}}
{{#each computedComparisons as |comparison index|}}
  {{comparison-viewer
      comparison=comparison
      listIndex=index
      isDefaultExpanded=isDefaultExpanded
      registerChild=(action "registerChild")
      unregisterChild=(action "unregisterChild")
      selectChild=(action "selectChild")
      selectedNumColumns=selectedNumColumns
  }}
{{/each}}
<div class="HideNoDiffsPanel">
  {{#if hideNoDiffs}}
    <span>You have {{pluralize noDiffComparisonsCount 'unchanged snapshot'}}.</span>
    <button {{action 'toggleNoDiffSnapshots'}} class="Button--link">
      View all {{selectedWidths}}px snapshots
    </button>
  {{else}}
    <button {{action 'toggleNoDiffSnapshots'}} class="Button--link">
      Hide unchanged {{selectedWidths}}px snapshots
    </button>
  {{/if}}
</div>
