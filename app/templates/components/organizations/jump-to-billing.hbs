<header>
  Choose your organization:
</header>
<div class="OrganizationsJumpToBilling-pageClickOverlay" {{action "hide"}}></div>
{{#with (await orgs) as |organizations|}}
  {{#power-select
    searchField="slug"
    placeholder="Select organization..."
    renderInPlace=true
    initiallyOpened=true
    close=(action "hide")
    matchTriggerWidth=false
    options=organizations
    onchange=(action "chooseOrganization")
    as |organization|
    }}
    {{organization.name}}
  {{/power-select}}
{{/with}}
