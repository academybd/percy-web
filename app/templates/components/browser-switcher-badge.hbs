<div class="browser-switcher-diff-count text-center position-absolute bg-white font-weight-semibold px-sm lh-1 z-1 {{if isActive "text-white shadow-purple-lg bg-purple-600" "text-purple"}} {{if (and (eq unnapprovedSnapshotCount 0) isActive) "bg-green-500 shadow-green-lg"}}" data-test-browser-switcher-diff-count>
  {{#if unnapprovedSnapshotCount}}
    {{unnapprovedSnapshotCount}}
  {{else}}
  <div data-test-browser-switcher-diff-count-all-approved>
    {{inline-svg "check-icon"}}
  </div>
  {{/if}}
</div>
